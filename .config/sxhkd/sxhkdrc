#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	kitty

# program launcher
alt + space
	rofi -combi-modi window,drun -show combi -modi combi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm
alt + super + Escape
	bspc quit

# restart bspwm && sxhkd
alt + Escape
	bspc wm -r; killall sxhkd; sxhkd

# close window
alt + shift + w 
	bspc node -c

# kill window
alt + shift + control + w
	bspc node -k

# alternate between the tiled and monocle layout
super + backslash
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the next/previous window in the current desktop
alt + {k, j}
	bspc node -f {next,prev}.local.!hidden.window

# focus next monitor
alt + Tab
	bspc monitor -f next



# toggle floating
super + shift + Return
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi


# toggle fullscreen
super + Return
    if [ -z "$(bspc query -N -n focused.fullscreen)" ]; then \
        bspc node focused -t fullscreen; \
    else \
        bspc node focused -t tiled; \
    fi


# toggle fullscreen
super + shift + alt + Return
    if [ -z "$(bspc query -N -n focused.pseudo_tiled)" ]; then \
        bspc node focused -t pseudo_tiled; \
    else \
        bspc node focused -t tiled; \
    fi



# switch desktop (0-9)
alt + {0-9}
    bspc desktop -f {0-9}

# switch desktop (10-19)
control + {0-9}
    bspc desktop -f 1{0-9}

# switch desktop (20-29)
super + {0-9}
    bspc desktop -f 2{0-9}




# move mode to other desktop (0-9)
alt + shift + {0-9}
	bspc node -d {0-9}

# move mode to other desktop (10-19)
control + shift + {0-9}
	bspc node -d 1{0-9}


# move mode to other desktop (20-29)
super + shift + {0-9}
	bspc node -d 2{0-9}




# node swap - next
alt + shift + k
    bspc node -s 'next.local.!hidden.window'

# node swap - previous
alt + shift + j
    bspc node -s 'prev.local.!hidden.window'





# screenshot
super + shift + s
    flameshot gui




# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}


# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# resize nodes
super + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}
				
# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# increase volume
XF86AudioRaiseVolume
    pamixer -i 1

# decrease volume
XF86AudioLowerVolume
    pamixer -d 1



# increase brightness
alt + XF86AudioRaiseVolume
    xbacklight +5

# decrease brightness
alt + XF86AudioLowerVolume
    xbacklight -5



#color picker
super + c
	colorpicker --short --one-shot --preview | xclip -selection clipboard -r


#picom
super + b
	killall picom || picom &






# toggle top polybar 
super + bracketleft 
    sh ~/.config/polybar/scripts/hideTopBar.sh




# toggle polybar bottom
super + bracketright 
    sh ~/.config/polybar/scripts/hideBottomBar.sh





